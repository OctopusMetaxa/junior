{% extends 'base.jinja2' %}
{% block content %}

<div class="container">
  <div class="row">
    <div class="card mt-5 col-6 offset-3">
      <div class="row card-header">
        <div class="mx-auto col-auto">
          ВОЙТИ
        </div>
      </div>

      <form class="form-horizontal" action="{{ url_for('auth.login') }}" method="post">

      {% if form.errors or error %}
        <div class="alert alert-danger" style="margin-top: 1em;">
          <ul style="margin: 0;">
            {% if error %}
              <li>Неверный логин или пароль!</li>
            {% endif %}
            {% for field in form.errors %}
              {% for error in form.errors[field] %}
                <li><b>{{ form[field].label.text }}:</b> {{ error }}</li>                
              {% endfor %}
            {% endfor %}
          </ul>
        </div>
      {% endif %}

        <div class="form-group">
          {% for form in form %}
            <div class="row">
              <div class="mx-auto col-10 mt-3">
                {{ form(class_='form-control', placeholder = form.label.text) }}
              </div>
            </div>
          {% endfor %}
          <div class="row">
            <div class="mx-auto col-auto mt-4">
              <button type="submit" class="btn btn-success">Отправить</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
  {% include 'components/or.jinja2' %}
  {% include 'components/social_login.jinja2' %} 
</div>
{% endblock %}
