{% extends 'base.jinja2' %}
{% block content %}


<div class="container">
  <div class="row justify-content-center">
    <div class="card mt-4 col-lg-6 col-11">
      <div class="row card-header">
        <div class="mx-auto col-auto">
          ВОЙТИ
        </div>
      </div>

      {% include 'components/form_error.jinja2' %}

      <form class="form-horizontal" action="{{ url_for('auth.login') }}" method="post">
        <div class="form-group">
          {% for form in form %}
            <div class="row">
              <div class="mx-auto col-10 mt-3">
                {{ form(class_='form-control', placeholder = form.label.text) }}
              </div>
            </div>
          {% endfor %}
          <div class="row">
            <div class="mx-auto col-auto mt-4">
              <button type="submit" class="btn btn-success">Отправить</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
  {% include 'components/or.jinja2' %}
  {% include 'components/social_login.jinja2' %} 
</div>
{% endblock %}
