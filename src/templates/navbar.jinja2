{% block content %}
<nav class="bg-dark navbar navbar-expand-lg navbar-light bg-light h4">
  <div class="navbar-brand">
    <img height="50" width="50" src="{{ url_for('static', filename='logo.png') }}" class="text-light img-fluid" alt="Responsive image">
  </div>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">  
      <li class="nav-item active text-light">
        <a class="nav-link text-light" href="{{ url_for('index.index') }}">Минимум<span class="sr-only">(current)</span></a>
      </li>
    </ul>
    <ul class="navbar-nav dropdown-menu-left">
      <div class="form-inline my-2 my-lg-0">
        {% if auth  %}
          {% if auth.user.is_superuser %}
            <a class="nav-link text-light" href="{{ url_for('admin.index') }}">Админ-панель</a>
          {% endif %}
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Вы вошли как {{ auth.user.login }}
            </a>
            <div class="dropdown-menu bg-secondary" aria-labelledby="navbarDropdown">
              <a class="nav-link text-light" href="{{ url_for('auth.logout') }}">Выход</a>
            </div>
          </li>
        {% else %}
          <li class="nav-item active">
            <a class="nav-link text-light" href="{{ url_for('auth.login') }}" methods="get">Вход</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link text-light" href="{{ url_for('auth.registration') }}" methods="get">Регистрация</a>
          </li>
        {% endif %}
      </div>
    </ul>
  </div>
</nav>
{% endblock %}
