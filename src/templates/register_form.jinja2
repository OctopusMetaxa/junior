{% extends 'base.jinja2' %}
{% include 'navbar.jinja2'%}
{% block header %}
{% endblock %}

{% block content %}
<div class="container card bg-secondary mt-5 col-4">

  <div class="row card-header">
    <div class="mx-auto col-auto">
      РЕГИСТРАЦИЯ
    </div>
  </div>

    {% if form.errors %}
      {% for field, errors in form.errors.items() %}
        <div class="alert alert-error">
          {{ form[field].label }}: {{ ', '.join(errors) }}
        </div>
      {% endfor %}
    {% endif %}
    {% if info %}
      <div class="alert alert-error">
        {{ info }}
      </div>
    {% endif %}

  <form class="form-horizontal mb-5" action="{{ url_for('auth.registration') }}" method="post">
    <div class="form-group">

      {% for form in form %}
        <div class="row">
          <div class="mx-auto col-10 mt-3">
            {{ form(class_='form-control', placeholder = form.label.text) }}
          </div>
        </div>
      {% endfor %}

      <div class="row">
        <div class="mx-auto col-auto mt-4">
          <button type="submit" class="btn btn-success">Зарегистрироваться</button>
        </div>
      </div>
    </div>
  </form>
  <div><a href="{{ url_for('github.login') }}">github</a></div>
</div>
{% endblock %}
