{% extends 'base.jinja2' %}
{% include 'navbar.jinja2'%}
{% block header %}
{% endblock %}

{% block content %}

<div class="container card mt-5 col-4">

  <div class="row card-header">
    <div class="mx-auto col-auto">
      РЕГИСТРАЦИЯ
    </div>
  </div>

<form class="form-horizontal mb-5" action="{{ url_for('auth.registration') }}" method="post">
  <div class="form-group">
    <div class="row">
      <div class="mx-auto col-10 mt-5 mb-2">
        <input type="text"
               name="login"
               required
               class="form-control"
               id="login"
               placeholder="Логин">
      </div>
    </div>
    <div class="row">
      <div class="mx-auto col-10 mb-2">
        <input type="email"
               name="email"
               required
               class="form-control"
               id="email"
               placeholder="Адресс электронной почты">
        </div>
    </div>
    <div class="row">
      <div class="mx-auto col-10 mb-2">
        <input type="password"
               name="password"
               required
               class="form-control"
               id="password1"
               placeholder="Пароль">
      </div>
    </div>
    <div class="row">
      <div class="mx-auto col-10 mb-2">
        <input type="password"
               name="password_confirmation"
               class="form-control"
               id="password_confirmation"
               required="true"
               placeholder="Повторите пароль">
      </div>
    </div>
    <div class="row">
      <div class="mx-auto col-10 mb-2">
        <input type="text"
               name="firstname"
               class="form-control"
               id="firstname"
               placeholder="Имя">
      </div>
    </div>
    <div class="row">
      <div class="mx-auto col-10 mb-2">
        <input type="text"
               name="middlename"
               class="form-control"
               id="middlename"
               placeholder="Фамилия">
      </div>
    </div>
    <div class="row">
      <div class="mx-auto col-10 mb-2">
        <input type="text"
               name="lastname"
               class="form-control"
               id="lastname"
               placeholder="Отчество">
      </div>
    </div>

    <div class="row">
      <div class="mx-auto col-auto mt-4">
        <button type="submit" class="btn btn-success">Зарегистрироваться</button>
      </div>
    </div>
  </div>
</form>
</div>
{% endblock %}
